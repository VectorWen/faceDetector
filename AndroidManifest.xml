<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.facedetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.facedetector.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.facedetector.Activity0"
            android:label="@string/title_activity_activity0" >
        </activity>
        <activity
            android:name="com.example.facedetector.Activity1"
            android:label="@string/title_activity_activity1" >
        </activity>
    </application>

    <!-- Camera Permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Camera Features -->
    <uses-feature android:name="android.hardware.camera" />
    <!-- Audio Recording Permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Storage Permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
